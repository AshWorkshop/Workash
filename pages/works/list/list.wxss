/* pages/works/list/list.wxss */
.flex-row {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  box-sizing: border-box;
}
.work-top {
  width: 692rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.work-hours {
  font-size: 25pt;
}
.work-item {
  display: flex;
  margin-bottom: 10rpx;
  flex-direction: column;
  padding: 20rpx 30rpx;
  background-color: white;
  align-items: left;
}

.work-text {
  display: flex;
  flex-direction: column;
  height: 140rpx;
}

.work-title {
  text-align: left;
  font-size: 13pt;
  font-weight: 600;
}

.work-detail {
  margin-top: 10rpx;
  text-align: left;
  font-size: 9pt;
  font-weight: lighter;
}

.work-bottom {
  width: 692rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 9pt;
  text-align: left;
  font-weight: lighter;
}

.manager-avatar {
  width: 32rpx;
  height: 32rpx;
  margin: 0 10rpx 0 20rpx;
}

.work-bottom-text {
  font-weight: 500;
  color: green;
  margin-right: 0rpx;
}

.work-by {
  display: flex;
  flex-direction: row;
  align-items: center;

}