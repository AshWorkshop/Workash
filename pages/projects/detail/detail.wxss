/* pages/projects/detail/detail.wxss */
.section__title {
  width: 170rpx;
  margin-right: 10rpx;
}
.add-part {
  margin-left: 40rpx;
}
.picker {
  min-width: 300rpx;
}
.dropdown-arrow {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}
.add-part-text {
  font-size: 11pt;
  color: #09bb07;
}

.section {
  display: flex;
  align-items: center;
  margin: 10rpx 10rpx;
  padding: 25rpx;
  font-size: 13pt;
  border-bottom-style: solid;
  border-bottom-width: thin;
  border-bottom-color: #dddddd;
  
}
.form-bottom {
  border-bottom-style: none;
}

.form {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx;
  box-sizing: border-box;
}

.input-items {
  background-color: #ffffff;
  border-radius: 1%;
  margin-bottom: 40rpx;
}

.btn-area {
  padding: 0 20rpx;
}

.switch-text {
  min-width: 240rpx;
}

.switch-area {
  margin-left: 40rpx;
}

.btn-area button {
  margin: 20rpx 0;
}